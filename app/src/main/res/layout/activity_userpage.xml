                android:layout_gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textSize="14sp" />

            <TextView
                android:text="→発送の準備をして、発送後は発送完了の連絡をしましょう"
