<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="190dp"
    android:padding="10dp"
    android:layout_height="wrap_content"
    android:background="@drawable/radius"
    android:weightSum="1">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!--本の画像-->
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:id="@+id/imgCovert"
            android:adjustViewBounds="false"
            android:scaleType="fitCenter"
            android:layout_margin="4dp"
            android:layout_gravity="center_horizontal" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="1"
        android:layout_margin="2dp">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <!--本の出品状態-->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="@android:style/TextAppearance.Small"
                android:text="Medium Text"
                android:id="@+id/book_state"
                android:textSize="14sp"
                android:ellipsize="end"
                android:focusable="true"
                android:minLines="2"
                android:maxLines="2"
                android:textColor="#F26964"
                android:textStyle="bold" />
            <!--本のタイトル-->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="@android:style/TextAppearance.Small"
                android:text="Medium Text"
                android:id="@+id/rowTextTitle"
                android:textSize="14sp"
                android:ellipsize="end"
                android:focusable="true"
                android:minLines="2"
                android:maxLines="2"
                android:textColor="#737373"
                android:textStyle="bold" />

            <!--著者-->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:textAppearance="@android:style/TextAppearance.Small"
                android:text="Medium Text"
                android:id="@+id/rowTextAuthor"
                android:textSize="12sp"
                android:ellipsize="end"
                android:focusableInTouchMode="false"
                android:maxLines="1" />

        </LinearLayout>
    </LinearLayout>


    <LinearLayout
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/owner"
            android:text="本の持ち主:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp" />
        <!--ユーザー名-->
            <TextView
                android:id="@+id/book_owner"
                android:text="ユーザー名"
                android:layout_marginLeft="8dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp" />
        <!--本の状態アイコン-->
        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="30dp"
            android:id="@+id/MainBookConditionIcon"
            android:src="@drawable/book_icon_good"
            android:layout_gravity="right" />
    </LinearLayout>
</LinearLayout>
