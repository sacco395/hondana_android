<?xml version="1.0" encoding="utf-8"?>
<!--本の詳細ページ-->
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/scroller"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:fillViewport="true" >

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="1">

        <!--本の画像-->
        <ImageView
            android:layout_width="300dp"
            android:layout_height="300dp"
            android:id="@+id/imageViewBookInfo"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"/>

        <!--区切り線-->
        <View
        android:layout_width="wrap_content"
        android:layout_height="20dip"
        android:background="#E6E5E1"
        android:layout_marginTop="12dip" />

        <!--タイトル-->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/textViewBookInfoTitle"
            android:id="@+id/textViewBookInfoTitle"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:textStyle="bold"
            android:textSize="20sp" />

        <!--本へのいいね-->
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/bookInfoLike"
            android:src="@drawable/abc_btn_rating_star_off_mtrl_alpha"
            android:tint="#C8C8C8"
            android:layout_gravity="right"
            android:layout_marginRight="15dp" />

        <!--著者名リード-->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/textViewBookInfoAuthorLead"
            android:id="@+id/textViewBookInfoAuthorLead"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="10dp"
            android:textStyle="bold"
            android:textColor="#2FCDB4"/>

        <!--著者名-->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/textViewBookInfoAuthor"
            android:id="@+id/textViewBookInfoAuthor"
            android:textSize="18sp"
            android:layout_marginLeft="10dp"/>

        <!--細い区切り線-->
        <View
            android:layout_width="wrap_content"
            android:layout_height="1dip"
            android:layout_marginTop="5dp"
            android:background="#E6E5E1" />


        <!--出版社リード-->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/textViewBookInfoPublisherLead"
            android:id="@+id/textViewBookInfoPublisherLead"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:textStyle="bold"
            android:textColor="#2FCDB4"/>

        <!--出版社-->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/textViewBookInfoPublisher"
            android:id="@+id/textViewBookInfoPublisher"
            android:layout_marginLeft="10dp"
            android:textSize="18sp"/>

        <!--細い区切り線-->
        <View
            android:layout_width="wrap_content"
            android:layout_height="1dip"
            android:layout_marginTop="5dp"
            android:background="#E6E5E1" />

        <!--発売日リード-->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/textViewBookInfoDateOfIssueLead"
            android:id="@+id/textViewBookInfoDataOfIssueLead"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:textStyle="bold"
            android:textColor="#2FCDB4"/>

        <!--発売日-->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/textViewBookInfoDateOfIssue"
            android:id="@+id/textViewBookInfoDataOfIssue"
            android:layout_marginLeft="10dp"
            android:textSize="18sp"/>

        <!--細い区切り線-->
        <View
            android:layout_width="wrap_content"
            android:layout_height="1dip"
            android:layout_marginTop="5dp"
            android:background="#E6E5E1" />

        <!--ISBNコードリード-->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/textViewBookInfoIsbnLead"
            android:id="@+id/textViewBookInfoIsbnLeadLead"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:textStyle="bold"
            android:textColor="#2FCDB4"/>

        <!--ISBNコード-->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/textViewBookInfoIsbn"
            android:id="@+id/textViewBookInfoIsbn"
            android:layout_marginLeft="10dp"
            android:textSize="18sp"/>

        <!--区切り線-->
        <View
            android:layout_width="wrap_content"
            android:layout_height="20dip"
            android:background="#E6E5E1"
            android:layout_marginTop="12dip" />

        <RelativeLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:layout_marginBottom="50dp"
            >

            <!--ユーザーアイコン-->
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/bookInfoUserIcon"
                android:src="@drawable/usericon"
                android:layout_marginLeft="25dp"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp" />

            <!--ユーザー名-->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ユーザー名"
                android:id="@+id/textViewBookInfoUserName"
                android:textSize="18sp"
                android:layout_alignTop="@+id/bookInfoUserIcon"
                android:layout_alignLeft="@+id/bookInfoConditionLead"/>

            <!--本の状態リード-->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="本の状態"
                android:id="@+id/bookInfoConditionLead"
                android:textStyle="bold"
                android:textColor="#2FCDB4"
                android:layout_below="@+id/textViewBookInfoUserName"
                android:layout_alignLeft="@+id/bookInfoWeight"
                android:layout_alignStart="@+id/bookInfoWeight"/>

            <!--本の状態-->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="本の状態"
                android:id="@+id/bookInfoCondition"
                android:layout_below="@+id/textViewBookInfoUserName"
                android:layout_toRightOf="@+id/bookInfoConditionLead"
                android:layout_toEndOf="@+id/bookInfoConditionLead"
                android:layout_marginLeft="10dp"/>

            <!--本の状態アイコン-->
            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:id="@+id/bookInfoBookConditionIcon"
                android:src="@drawable/book_icon_good"
                android:layout_alignTop="@+id/bookInfoUserIcon"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_marginRight="27dp"
                android:layout_marginEnd="27dp"/>

            <!--その他の状態リード-->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="その他状態"
                android:id="@+id/bookInfoEtcLead"
                android:textStyle="bold"
                android:textColor="#2FCDB4"
                android:layout_gravity="center_horizontal"
                android:layout_below="@+id/bookInfoConditionLead"
                android:layout_alignLeft="@+id/bookInfoConditionLead"
                android:layout_alignStart="@+id/bookInfoConditionLead"/>
            <!--その他の状態-->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="その他状態"
                android:id="@+id/bookInfoEtc"
                android:layout_gravity="center_horizontal"
                android:layout_below="@+id/bookInfoCondition"
                android:layout_toRightOf="@+id/bookInfoEtcLead"
                android:layout_toEndOf="@+id/bookInfoEtcLead"
                android:layout_marginLeft="10dp"/>

            <!--書き込み線リード-->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="書き込み線"
                android:id="@+id/bookInfoLineLead"
                android:textStyle="bold"
                android:textColor="#2FCDB4"
                android:layout_gravity="center_horizontal"
                android:layout_below="@+id/bookInfoWeightLead"
                android:layout_alignLeft="@+id/bookInfoWeightLead"
                android:layout_alignStart="@+id/bookInfoWeightLead"/>
            <!--書き込み線-->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="書き込み線"
                android:id="@+id/bookInfoLine"
                android:layout_gravity="center_horizontal"
                android:layout_below="@+id/bookInfoWeight"
                android:layout_alignRight="@+id/textViewBookInfoUserName"
                android:layout_alignEnd="@+id/textViewBookInfoUserName"/>


            <!--ページの折れリード-->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ページの折れ"
                android:id="@+id/bookInfoBrokenLead"
                android:textStyle="bold"
                android:textColor="#2FCDB4"
                android:layout_gravity="center_horizontal"
                android:layout_below="@+id/bookInfoLineLead"
                android:layout_alignLeft="@+id/bookInfoLineLead"
                android:layout_alignStart="@+id/bookInfoLineLead"/>
            <!--ページの折れ-->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ページの折れ"
                android:id="@+id/bookInfoBroken"
                android:layout_gravity="center_horizontal"
                android:layout_below="@+id/bookInfoLine"
                android:layout_alignLeft="@+id/bookInfoLine"
                android:layout_alignStart="@+id/bookInfoLine"/>

            <!--サイズリード-->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="サイズ"
                android:id="@+id/bookInfoSizeLead"
                android:textStyle="bold"
                android:textColor="#2FCDB4"
                android:layout_gravity="center_horizontal"
                android:layout_alignTop="@+id/bookInfoSize"
                android:layout_alignLeft="@+id/bookInfoUserIcon"
                android:layout_alignStart="@+id/bookInfoUserIcon"/>

            <!--サイズ-->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="サイズ"
                android:id="@+id/bookInfoSize"
                android:layout_gravity="center_horizontal"
                android:layout_centerVertical="true"
                android:layout_alignLeft="@+id/bookInfoWeight"
                android:layout_alignStart="@+id/bookInfoWeight"/>
            <!--重さリード-->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="重さ"
                android:id="@+id/bookInfoWeightLead"
                android:textStyle="bold"
                android:textColor="#2FCDB4"
                android:layout_gravity="center_horizontal"
                android:layout_below="@+id/bookInfoSizeLead"
                android:layout_alignLeft="@+id/bookInfoSizeLead"
                android:layout_alignStart="@+id/bookInfoSizeLead"/>
            <!--重さリード-->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="重さ"
                android:id="@+id/bookInfoWeight"
                android:layout_gravity="center_horizontal"
                android:layout_below="@+id/bookInfoSize"
                android:layout_toRightOf="@+id/bookInfoLineLead"/>
            <!--備考リード-->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="備考"
                android:id="@+id/bookInfoNotesLead"
                android:textStyle="bold"
                android:textColor="#2FCDB4"
                android:layout_alignBottom="@+id/bookInfoNotes"
                android:layout_alignLeft="@+id/bookInfoBrokenLead"
                android:layout_alignStart="@+id/bookInfoBrokenLead"/>

            <!--備考-->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="備考"
                android:id="@+id/bookInfoNotes"
                android:layout_below="@+id/bookInfoBrokenLead"
                android:layout_alignLeft="@+id/bookInfoLine"
                android:layout_alignStart="@+id/bookInfoLine"/>


        </RelativeLayout>

        <!--区切り線-->

        <!--交換リクエストボタン-->

        <View
            android:layout_width="wrap_content"
            android:layout_height="20dip"
            android:background="#E6E5E1"
            android:layout_weight="0.16"/>

        <Button
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:text="@string/buttonPreRequest"
            android:id="@+id/buttonPreRequest"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/shape_rounded_corners"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="30dp"/>
        </LinearLayout>
</ScrollView>
