<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/scroller"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:fillViewport="true" >


    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!--交換をリクエストします-->
        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="6dip"
            android:paddingRight="6dip"
            android:paddingTop="6dip"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:id="@+id/requestText01"
            android:text="@string/requestText01"
            android:layout_weight="0.1"
            android:layout_marginLeft="10dp" />

        <!--クリックポストで宛名ラベルを作成しましょう。-->
        <TextView
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="0.1"
            android:paddingLeft="6dip"
            android:paddingRight="6dip"
            android:paddingBottom="6dip"
            android:id="@+id/requestText02"
            android:text="@string/requestText02"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="10dp" />

        <!--クリックポストへボタン-->
        <Button
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:text="@string/buttonClickPost"
            android:id="@+id/buttonClickPost"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/shape_rounded_corners"/>

        <!--区切り線-->
        <View
            android:layout_width="wrap_content"
            android:layout_height="20dip"
            android:background="#F1F0EE"
            android:layout_marginLeft="6dip"
            android:layout_marginRight="6dip"
            android:layout_marginTop="20dip"
            android:layout_marginBottom="20dip" />


        <!--宛名ラベルのデータをアップロードしましょう。-->
        <TextView
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="0.1"
            android:paddingLeft="6dip"
            android:paddingRight="6dip"
            android:paddingBottom="6dip"
            android:id="@+id/textView3"
            android:text="@string/requestText03"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="10dp" />

        <!--ファイルを選択ボタン-->
        <Button
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:text="@string/buttonSelectFile"
            android:id="@+id/buttonSelectFile"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="15dp"
            android:background="@drawable/shape_rounded_corners" />

        <!--&lt;!&ndash;区切り線&ndash;&gt;-->
