<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             tools:context="com.books.hondana.StepThreeFragment"
             android:background="#F1F0EE">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">


        <ImageView
            android:id="@+id/step03"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/step03"
            android:layout_weight="1"/>

        <TextView
            android:id="@+id/step03_text01"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="よみたい本はブクで交換！"
            android:textStyle="bold"
            android:textColor="#52AE93"
            android:gravity="center"
            android:layout_weight="1"
            android:textSize="22sp"/>


        <TextView
            android:id="@+id/step03_text02"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="ホンダナの会員同士で\nブクと本が交換できます。"
            android:textColor="#52AE93"
            android:gravity="center|top"
            android:textSize="18sp"
            android:lineSpacingMultiplier="1.5"
            android:layout_weight="2"/>


    </LinearLayout>

</FrameLayout>
